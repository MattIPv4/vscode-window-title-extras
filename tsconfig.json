{
  "compilerOptions": {
    "target": "ESNext",
    "module": "preserve",
    "lib": ["ESNext"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "noEmit": true,
  },
  "include": [
    "src/**/*.ts"
  ],
}
